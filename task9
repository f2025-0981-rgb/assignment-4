#include <iostream>
#include <vector>
#include <string>

using namespace std;

struct Student
{
    string name;
    int id;
};

struct Course
{
    string courseName;
    string courseCode;
    vector<Student> students;
};

int main()
{
    int numCourses;
    cout << "Enter number of courses: ";
    cin >> numCourses;

    vector<Course> courses;

    for (int i = 0; i < numCourses; i++)
    {
        Course c;
        int numStudents;

        cout << "\nEnter course name: ";
        cin.ignore();
        getline(cin, c.courseName);

        cout << "Enter course code: ";
        getline(cin, c.courseCode);

        cout << "Enter number of students enrolled: ";
        cin >> numStudents;

        for (int j = 0; j < numStudents; j++)
        {
            Student s;
            cout << "Enter student name: ";
            cin.ignore();
            getline(cin, s.name);
            cout << "Enter student ID: ";
            cin >> s.id;
            c.students.push_back(s);
        }

        courses.push_back(c);
    }

    cout << "\nCourse Enrollment Details\n";

    for (const auto &c : courses)
    {
        cout << "\nCourse Name: " << c.courseName << endl;
        cout << "Course Code: " << c.courseCode << endl;
        cout << "Enrolled Students:\n";

        for (const auto &s : c.students)
        {
            cout << "Name: " << s.name << ", ID: " << s.id << endl;
        }
    }

    return 0;
}
